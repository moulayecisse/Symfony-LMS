{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <h1>Library</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ library.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ library.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ library.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ library.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ library.email }}</td>
            </tr>
            <tr>
                <th>OpeningDate</th>
                <td>{{ library.openingDate ? library.openingDate|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ClosingTime</th>
                <td>{{ library.closingTime ? library.closingTime|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('library_index') }}">back to list</a>

    <a href="{{ path('library_edit', {'id': library.id}) }}">edit</a>

    {{ include('library/_delete_form.html.twig') }}
{% endblock %}